/* main/main.wxss */
page{
  overflow-y: auto;
}
.main.active{
  overflow-y: hidden;
}
.scroll-view-item-more::after{
  content: '\e679';
}
.scroll-view-item-more.simulate-block{
  height:130rpx;
  font-size: 100rpx;
}
.main-baner image{
  width: 750rpx;
  height: 364rpx;
}
.main-search{
  background: transparent;
  margin-top: -36rpx;
}
.main-search .fork-search{
  height:90rpx;
}
.main-search view{
  width: 534rpx;
  height: 72rpx;
  font-size: 24rpx;
  padding:18rpx 25rpx;
  box-sizing: border-box;
  border: 1px solid #9B9B9B;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, .5);
  border-radius: 180rpx;
  background: white;
}
.main-search input{
  flex-grow: 1;
  font-size: 26rpx;
}
.search-icon{
  margin-left:20rpx;
}
.content-type{
  margin:20rpx 0;
  font-size: 30rpx;
  position: relative;
}
.content-type.green{
  color: rgba(65, 117, 5,1);
  text-shadow: 0 4rpx 3rpx rgba(118, 110, 110, .5);
}
.content-type::before,.content-type:after{
  content: '';
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 45rpx;
  height:3px;
}
.content-type.green::before,.content-type.green:after{
  background: rgba(65, 117, 5, .4);
}
.content-type:before{
  left: 250rpx;
}
.content-type:after{
  right: 250rpx;
}
.content scroll-view{
  /* width: 100%; */
  height: 210rpx;
  white-space: nowrap;
}
.scroll-view-item{
  width: 236rpx;
  height: 200rpx;
  display: inline-block; 
  margin-right: 12rpx;
  position: relative;
}
.scroll-view-item image{
  width: 236rpx;
  height: 200rpx;
}
.scroll-view-item text{
  text-overflow: ellipsis;
  overflow: hidden;
  padding:12rpx;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, .3);
  color: white;
}
.scroll-view-item navigate{
  height: 100%;
}
.btn-all,.btn-day{
  color: white;
  font-size: 32rpx;
  width: 220rpx;
  height: 88rpx;
  border: none;
  border-radius: 100px;
  margin: 30rpx 0;
}
.btn-day{
  background-image: linear-gradient(270deg, rgba(96,81,245,0.72) 25%, rgba(251,97,97,0.72) 100%);
  margin-right: 64rpx;
}
.btn-all{
  background-image: linear-gradient(270deg, #FAD948 14%, rgba(247,111,28,0.94) 62%);
}
.content-type.brown::before,.content-type.brown:after{
  background: rgba(139, 87, 42, 100);
}
.content-type.brown{
  color: rgba(139, 87, 42, 100);
  text-shadow: 0 4rpx 3rpx rgba(139, 87, 42, .6);
}
.content-type.purple::before,.content-type.purple:after{
  background: rgba(189, 16, 224, 100);
}
.content-type.purple{
  color: rgba(189, 16, 224, 100);
  text-shadow: 0 4rpx 3rpx rgba(189, 16, 224, .5);
}
.focus-item{
  margin: 12rpx auto;
  width: 730rpx;
  height: 420rpx;
  position: relative;
}
.focus-item image{
  width: 100%;
  height: 100%;
}
.focus-item-bg{
  background: rgba(245, 166, 35, .12);
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
.focus-item-txt-bg{
  background: rgba(0, 0, 0, .5);
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 12rpx;
  color: white;
}
.focus-item-user{
  flex-direction: column;
  width: 160rpx;
  height: 120rpx;
}
.focus-item-user text{
 font-size: 24rpx;
 margin-top: 10rpx;
}
.focus-item-user image{
  width:70rpx;
  height:60rpx;
  margin-top: 6rpx;
  border-radius: 50%;
}
.focus-item-detail{
  flex-grow: 1;
  padding-right: 12rpx;
}
.focus-item-detail .title{
  font-size: 32rpx;
}
.focus-item-detail .score,.focus-item-detail .cooked,.focus-item-detail .cookie{
  font-size: 30rpx;
  margin-right: 12rpx;
}
.content-type.blue::before,.content-type.blue:after{
  background: rgba(74, 144, 226, 100);
}
.content-type.blue{
  color: rgba(74, 144, 226, 100);
  text-shadow: 0 4rpx 3rpx rgba(74, 144, 226, .5);
}
.topic{
  padding-bottom: 30rpx;
}
.topic-item{
  padding: 10rpx 0;
  border-bottom: 1px solid rgba(151, 151, 151, .3);
}
.topic-item:nth-last-child(1){
  border: none;
}
.topic-item image{
  width: 160rpx;
  height: 125rpx;
  margin-right: 24rpx;
}
.topic-item-detail{
  position: relative;
  padding:0 12rpx;
  width: 500rpx;
}
.topic-item-detail .info{
  text-indent: 1.5em;
  font-size: 26rpx;
  color: #4A4A4A;
  padding: 6rpx 12rpx;
}
.topic-item-detail .browser,.topic-item-detail .cookie{
  font-size: 24rpx;
  color: #8B572A;
  padding: 0 10rpx;
}
.topic-item-detail .arrow-right{
  position: absolute;
  right: -40rpx;
  top:50%;
  transform:translate(-50%);
}
.searchMask{
  position: fixed;
  top: 0;
  bottom: 0;
  width: 100%;
  background: rgba(0, 0, 0, .72);
  z-index: 100;
  display: none;
  opacity: 0;
} 
.searchShow{
  display: block;
  animation: fadeIn .15s 0s 1 ease-in forwards; 
}
@keyframes fadeIn{
  from{
    opacity: 0;
  }
  to{
    opacity: 1;
  }
}
.searchMaskContent{
  width:100%;
  margin-top:49%;
  height: 350rpx;
}
.searchMaskContent .main-search{
  padding-left: 30rpx;
}
.searchMaskContent .main-search view{
  height: 82rpx;
  width:620rpx;
}
.search-history{
  margin-top: 20rpx;
}
.search-history-item{
  border-radius:40rpx;
  height:66rpx;
  line-height:66rpx;
  float:left;
}
.search-history-item:nth-child(1){
  border-color: #417505;
  color: #417505;
  margin-left: 120rpx;
  margin-top: 50rpx;
}
.search-history-item:nth-child(2){
  border-color: #F6A623;
  color: #F6A623;
  margin-left:50rpx;
  margin-top:42rpx;
}
.search-history-item:nth-child(3){
  border-color: #8B572A;
  color: #8B572A;
  margin-left:44rpx;
  margin-top:60rpx;
}
.search-history-item:nth-child(4){
  border-color: #9012FE;
  color: #9012FE;
  margin-left:94rpx;
  margin-top:48rpx;
}
.search-history-item:nth-child(5){
  border-color: #BD0FE1;
  color: #BD0FE1;
  margin-left:44rpx;
  margin-top:22rpx;
}
.search-history-item:nth-child(6){
  border-color: #BD0FE1;
  color: #BD0FE1;
  margin-top:50rpx;
  margin-left:40rpx;
}
.cancel{
  background: transparent;
  font-size: 32rpx;
  color: white;
  padding: 0 !important;
}
.cancel::after{
  border: none;
}