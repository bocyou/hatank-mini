/* pages/mine/mine.wxss */
.mine{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0; 
  overflow: hidden;
}
.mine-banner,.mine-banner-img{
  width: 100%;
  height: 220rpx;
}
.base-info{
  position: absolute;
  top: 50rpx;
  left: 50%;
  transform:translateX(-50%);
  width: 580rpx;
  color: white;
  justify-content: space-around;
}
.user-img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
}
.settings{
  font-size: 100rpx;
  color: white;
}
.settings:after{
  content: '\e63b';
}
.mine-content{
  position: absolute;
  top: 186rpx;
  padding: 14rpx 0;
  box-sizing: border-box;
  width: 734rpx;
  margin-left: 8rpx;
  background: #F5F5F5;
  border-radius: 24rpx 24rpx 0 0;
  overflow: hidden;
}
.mine-content-menu-item{
  flex-grow: 1;
  height: 90rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  color: gray;
}
.mine-content-menu-item.active{
  color: #9013FE;
}
.right-line{
  position: relative;
}
.right-line::after{
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  content: '';
  width: 1px;
  height: 56rpx;
  background: rgba(151, 151, 151, .5);
}
.swiper-item-content{
   /* height: 420rpx;  */
  height: 480rpx;
  position: relative;
  margin-bottom: 14rpx;
}
.swiper-item-content-bg{
  position: absolute;
  top: 0;
  bottom: 0;
  width: 100%;
  background: rgba(245, 166, 35, .1);
}
.swiper-item-content-txt{
  position: absolute;
  bottom: 0;
  width: 100%;
  padding:10rpx;
  box-sizing: border-box;
  background: rgba(0, 0, 0, .1);
  color: white;
  /* justify-content: space-around; */
}
.swiper-item-content .del{
  width: 120rpx;
  line-height: 60rpx;
  position: absolute;
  z-index: 100;
  right: 0;
  color: white;
  background: rgba(74, 74, 74, .3);
}
.swiper-item-content-txt-detail{
  width: 430rpx;
  padding-right: 12rpx;
}
.swiper-item-content-txt-detail .title{
  font-size: 32rpx;
}
.swiper-item-content-txt-detail .title-intro text{
  padding: 0 6rpx;
  font-size: 30rpx;
}
.swiper-item-content-txt-user{
  flex-direction: column;
  width: 130rpx;
}
.swiper-item-content-txt-user text{
  font-size: 24rpx;
}
.swiper-item-content-txt-user image{
  width: 65rpx;
  height: 65rpx;
}
.swiper-item-content>image{
  width: 100%;
  height: 100%;
}
.fans-item{
  width: 666rpx;
  height: 278rpx;
  margin: 0 auto;
  border-radius: 20rpx;
  border:1px solid rgba(155, 155, 155, .3);
  box-shadow: 0 2px 3px rgba(151, 151, 151, .3);
  padding: 30rpx 20rpx;
  background: white;
  justify-content: space-around;
  color: #3C3C3D;
}
.fans-item-detail-title{
  color: #000;
}
.fans-item-user{
  width: 140rpx;
  height: 140rpx;
  /* border-radius: 50%; */
  margin-right: 24rpx;
}
.fans-item-detail{
  padding: 0 24rpx;
  flex-grow: 1;
}
.swiper-item-content.fans{
  height: auto;
}