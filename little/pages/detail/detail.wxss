/* pages/detail/detail.wxss */
@import '../list/list.wxss';
.darkgray{
  color: rgba(74, 74, 74, .92);
}
.detail{
  -webkit-overflow-scrolling: touch;
  height: 100%;
  overflow-y: auto;
}
.detail-content{
  padding:10rpx 20rpx;
  box-sizing: border-box;
}
.detail-banner{
  width: 100%;
  height:480rpx;
}
.detail-header{
  margin: 10rpx;
}
.focus-item-user{
  margin: 10rpx;
}
.detail-header .title{
  font-size: 32rpx;
  margin-right: 20rpx;
  line-height: 60rpx;
}
.detail-header text:not(.title){
  font-size: 26rpx;
  margin-left: 10rpx;
}
.detail-intro{
  display: block;
  font-size: 26rpx;
  text-indent: 1em;
  margin: 12rpx 0 32rpx;
}
.detail-materia{
  font-size: 30rpx;
  margin-top:-12rpx;
  padding-bottom: 32rpx;
}
.detail-materia-item{
  line-height: 72rpx;
  border-top: 1px solid rgba(227, 227, 227,.5);
}
.detail-steps{
  margin-top: 12rpx;
}
.detail-step-content{
  padding: 12rpx;
  text-indent: 1em;
}
.tips{
  text-indent: 1em;
  margin: 12rpx;
  font-size: 26rpx;
}
.detail-action-menu{
  padding: 38rpx;
}
.menu-item-icon{
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}
.tip{
  text-align: right;
  font-size: 24rpx;
}
.comment{
  font-size: 30rpx;
  margin-top: 40rpx;
  border-bottom: 1px solid rgba(227, 227, 227,.5);
  padding:12rpx 0 ;
}
.user-area{
  flex-direction: column;
}
.comment-content image{
  width: 120rpx;
  height:100rpx;
  margin-left: 20rpx;
  border-radius: 50%;
}
.topic-item-detail .little-icon{
  width: 28rpx;
  height: 28rpx;
  margin: 0;
}
.topic-item-detail .time{
  width:260rpx;
  margin-right: 16rpx;
}
.comment-content .comment{
  margin-top: 6rpx;
  width: 260rpx;
  line-height: 46rpx;
  font-size: 24rpx;
  border-radius: 50rpx;
  color: #4A4A4A;
  border:1px solid rgba(227, 227, 227,.72);
}
.comment-content .comment:after{
  border: none;
}
.agree-gray:after{
  font-size: 60rpx;
  content: '\e62c';
}
.comment-gray:after{
  font-size: 60rpx;
  content: '\e64b';
}
.topic-item-detail .arrow-right{
  top: 38%;
}
.comment-area textarea{
  display: block;
  padding: 12rpx;
  height: 150rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  border: 1px solid #eee;
}
.btn-detail-click{
  background: transparent;
  padding: 0;
  margin-right: 30rpx;
}
.btn-detail-click[disabled]{
  background: transparent !important;
}
.btn-detail-click::after{
  border: none;
}
.add-focus{
  margin-left: 12rpx;
}
.focus-icon::after{
  content: '\e643';
}