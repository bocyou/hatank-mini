/* pages/menus/menus.wxss */
.box{
  padding: 10rpx;
  height: 100%;
  box-sizing: border-box;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}
.menus-title{
  font-size: 32rpx;
}
.menus-content{
  padding:20rpx;
}
.menus-content-item{
  border-radius:40rpx;
  height:60rpx;
  line-height:58rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  background: transparent;
  opacity: .72;
}
.menus-content-item::after{
  border: none;
}
.menus{
  overflow-y: auto;
  padding:0 16rpx 16rpx;
}
.menus-header{
  font-size: 32rpx;
  line-height:80rpx;
  border-bottom: 1px solid rgba(155, 155, 155, .2);
}
.menus-header .left-line{
  display: inline-block;
  width: 6rpx;
  height: 26rpx;
  margin-right: 12rpx;
  background: red;
}